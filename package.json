{
  "name": "igor-braz-tech-challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/igorbraz89/engineering-interivew-be.git",
  "author": "Igor Braz <ipeterlemodolobraz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_PATH=./build node ./build/index.js",
    "start:dev": "yarn build && nodemon",
    "build": "tsc && yarn postbuild",
    "postbuild": "copyfiles -u 1 src/**/*.sql build",
    "test": "jest --env=node --forceExit && yarn test:db",
    "test:db": "cross-env DATABASE_SSL=false jest --config=jest.db.config.js --runInBand",
    "migrate": "yarn build && ts-node-script src/bin/run-migrations.ts",
    "type-check": "tsc --noEmit -p .",
    "docker-build": "docker build -t taskmanager/igorbraz .",
    "run-docker": "yarn docker-postgres && yarn run docker-app",
    "docker-app": "docker run -p 3001:3001 -d taskmanager/igorbraz",
    "docker-postgres": "docker run -e POSTGRES_PASSWORD=password -d -p 5432:5432 postgres:11.7"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.0.3",
    "@types/passport": "^1.0.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "bcrypt": "^5.0.1",
    "connect": "^3.7.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.1",
    "express-session": "^1.17.2",
    "express-sslify": "^1.2.0",
    "helmet": "^4.6.0",
    "jest": "^27.4.4",
    "joi": "^17.5.0",
    "lint": "^0.7.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "passport": "^0.5.0",
    "passport-custom": "^1.1.1",
    "passport-oauth2": "^1.6.1",
    "path": "^0.12.7",
    "pg": "^8.7.1",
    "pg-promise": "^10.11.1",
    "pg-tmp": "^0.2.0",
    "postgrator": "^4.2.0",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.4.2",
    "tsc-node": "^0.0.3",
    "typescript": "^4.5.3"
  },
  "devDependencies": {
    "@types/connect": "^3",
    "@types/copyfiles": "^2",
    "@types/eslint": "^8",
    "@types/node": "^16.11.12",
    "@types/pg": "^8.6.1",
    "@types/prettier": "^2"
  }
}
